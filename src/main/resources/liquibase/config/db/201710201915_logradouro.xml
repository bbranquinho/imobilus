<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="victor">
        <createTable tableName="tb_logradouro">
            <column name="codigo_logradouro" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>

            <column name="nome_logradouro" type="varchar(50)">
                <constraints nullable="false" />
            </column>

            <column name="cep_logradouro" type="varchar(8)">
                <constraints nullable="false" />
            </column>

            <column name="codigo_bairro" type="int">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="victor">
        <addForeignKeyConstraint baseColumnNames="codigo_bairro"
                                 baseTableName="tb_logradouro" constraintName="fk_codigo_logradouro"
                                 deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
                                 onUpdate="RESTRICT" referencedColumnNames="codigo_bairro"
                                 referencedTableName="tb_bairros" />
    </changeSet>

</databaseChangeLog>
